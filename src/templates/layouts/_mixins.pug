mixin i(name)
	svg.icon(class='icon-' + name)
		use(xlink:href='img/sprite.svg#icon-' + name)

mixin header(classHeader, classBurger)
	.header.js-header#header(class=classHeader)
		.header__center.center
			a.header__logo(href="index.html")
				img.header__pic(src="img/logo.svg" alt="")
			.header__social.header__social_main
			button.header__burger.js-header-burger(class=classBurger)
		.header__wrapper.js-header-wrapper
			.header__preview
				a.header__logo(href="index.html")
					img.header__pic(src="img/logo-white.svg" alt="")
				.header__img
					img.header__pic(src="img/bg-header.png" alt="")
			.header__center.center
				.header__contacts
					a.header__line(href="mailto:hello@wixels.com")
						.header__icon
							+i('email')
						.header__text hello@wixels.com
					.header__line
						.header__icon
							+i('place')
						.header__text
							p The Buzz Shopping Centre
							p Witkoppen Rd, Fourways
					a.header__line(href="tel:(+27)79 839 6004")
						.header__icon
							+i('phone')
						.header__text (+27)79 839 6004
				nav.header__nav
					a.js-clickable.header__item(href="/#header")
						span Home
					a.js-clickable.header__item(href="/#details")
						span About
					a.js-clickable.header__item(href="/#cases")
						span Work
					a.js-clickable.header__item(href="/#contact")
						span Contact
